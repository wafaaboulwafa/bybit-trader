[Unit]
Description=Bybit Trading Bot
After=network.target

[Service]
ExecStart=/usr/bin/node /home/wafa/bybit-trader/app.js
WorkingDirectory=/home/wafa/bybit-trader
Restart=always
RestartSec=10
User=wafa
Environment=NODE_ENV=production
StandardOutput=append:/var/log/bybit-trader.log
StandardError=append:/var/log/bybit-trader.log
LimitNOFILE=4096

[Install]
WantedBy=multi-user.target
